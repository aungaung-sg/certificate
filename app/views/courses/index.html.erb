<p id="notice"><%= notice %></p>

<h1>Courses List</h1>
<%= link_to 'New Course', new_course_path, class: "btn btn-info btn-float tooltips"  %>
<table class="table table-hover" id="courses">
  <thead>
    <tr>
      <th><%= sortable "id", "ID" %></th>
      <th><%= sortable "name", "Name" %></th>
      <th><%= sortable "title", "Course Title" %></th>
      <th><%= sortable "description", "Description" %></th>
      <th><%= sortable "b_name", "Branch Name" %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |course| %>
      <tr>
        <td><%= course.id %></td>
        <td><%= course.name %></td>
        <td><%= course.title %></td>
        <td><%= course.description %></td>
        <td><%= course.user.name %></td>
        <td>
          <%= link_to course, :class => "btn btn-crud-action btn-xs tooltips" do %>
            <i class="glyphicon glyphicon-list-alt"></i>
          <% end %>
        </td>
        <td>
          <%= link_to edit_course_path(course), class: "btn btn-default btn btn-success" do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
        </td>
        <td>
          <%= link_to course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn btn-danger" do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'layouts/index_footer' %>